{
  "name": "@template/convex",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/convex",
  "inputs": ["@template/types"],
  "targets": {
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "convex dev",
        "cwd": "{projectRoot}"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "convex codegen",
        "cwd": "{projectRoot}"
      },
      "dependsOn": ["^build"]
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "convex deploy",
        "cwd": "{projectRoot}"
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "options": {
        "config": "./vitest.config.ts"
      },
      "configurations": {
        "watch": {
          "watch": false
        }
      },
      "cwd": "{projectRoot}"
    },
    "seed": {
      "executor": "nx:run-commands",
      "options": {
        "command": "convex run seed:seed",
        "cwd": "{projectRoot}"
      }
    },
    "clear": {
      "executor": "nx:run-commands",
      "options": {
        "command": "convex run seed:clear",
        "cwd": "{projectRoot}"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd": "{projectRoot}"
      },
      "dependsOn": ["^build"]
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun run clean",
        "cwd": "{projectRoot}"
      }
    }
  },
  "tags": ["type:app", "scope:backend"]
}
